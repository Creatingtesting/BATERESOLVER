game.StarterGui:SetCore("SendNotification", {
    Title = "Loaded Universal Resolver";
    Text = "Enjoy locking!";
})

local RunService = game:GetService("RunService")
local Players = game:GetService("Players")
local LocalPlayer = Players.LocalPlayer

RunService.Heartbeat:Connect(function()
    pcall(function()
        for _, player in pairs(Players:GetPlayers()) do
            if player.Name ~= LocalPlayer.Name then
                local character = player.Character
                if character then
                    local hrp = character:FindFirstChild("HumanoidRootPart")
                    if hrp then
                        -- Correct the position and orientation
                        hrp.CFrame = CFrame.new(hrp.Position) * CFrame.Angles(0, math.rad(hrp.Orientation.Y), 0)
                        
                        -- Fix the velocities
                        if hrp.Velocity.Y ~= 0 or hrp.AssemblyLinearVelocity.Y ~= 0 then
                            hrp.Velocity = Vector3.new(hrp.Velocity.X, 0, hrp.Velocity.Z)
                            hrp.AssemblyLinearVelocity = Vector3.new(hrp.Velocity.X, 0, hrp.Velocity.Z)
                        end

                        -- Additional velocity fixers
                        hrp.RotVelocity = Vector3.new(0, hrp.RotVelocity.Y, 0)
                        hrp.AssemblyAngularVelocity = Vector3.new(0, hrp.AssemblyAngularVelocity.Y, 0)
                    end
                end
            end
        end
    end)
end)
