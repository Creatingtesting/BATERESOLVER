game.StarterGui:SetCore("SendNotification", {
    Title = "Loaded Universal Resolver";
    Text = "Enjoy locking!";
})

local RunService = game:GetService("RunService")
local Players = game:GetService("Players")
local LocalPlayer = Players.LocalPlayer

RunService.Heartbeat:Connect(function()
    pcall(function()
        for _, player in pairs(Players:GetPlayers()) do
            if player.Name ~= LocalPlayer.Name then
                local character = player.Character
                if character then
                    local hrp = character:FindFirstChild("HumanoidRootPart")
                    if hrp then
                        -- Only correct the Y component of the velocity if it's non-zero
                        if hrp.Velocity.Y ~= 0 then
                            hrp.Velocity = Vector3.new(hrp.Velocity.X, 0, hrp.Velocity.Z)
                        end
                        if hrp.AssemblyLinearVelocity.Y ~= 0 then
                            hrp.AssemblyLinearVelocity = Vector3.new(hrp.AssemblyLinearVelocity.X, 0, hrp.AssemblyLinearVelocity.Z)
                        end

                        -- Additional velocity fixers
                        if hrp.AssemblyAngularVelocity.Y ~= 0 then
                            hrp.AssemblyAngularVelocity = Vector3.new(hrp.AssemblyAngularVelocity.X, 0, hrp.AssemblyAngularVelocity.Z)
                        end
                        if hrp.RotVelocity.Y ~= 0 then
                            hrp.RotVelocity = Vector3.new(hrp.RotVelocity.X, 0, hrp.RotVelocity.Z)
                        end

                        -- Maintain the original orientation without resetting the position
                        hrp.CFrame = CFrame.new(hrp.Position) * CFrame.Angles(0, hrp.Orientation.Y, 0)
                    end
                end
            end
        end
    end)
end)
